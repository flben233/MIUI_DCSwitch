<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#555555">
    <Button
            android:text="伪装刷新率为60hz并打开DC调光设置"
            android:layout_width="409dp"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.465" android:background="#673AB7"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="恢复显示为最高刷新率"
            android:layout_width="409dp"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:background="#673AB7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintVertical_bias="0.21"
    />
</androidx.constraintlayout.widget.ConstraintLayout>